<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="kodi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- KodiControl Thing Type -->
	<thing-type id="kodicontrol">
		<label>KodiControl Thing</label>
		<description>With the help of KodiControl you can send action (e.g. notifications) to Kodi</description>

		<channels>
			<channel id="friendly-name" typeId="friendly-name" />
			<channel id="uptime" typeId="uptime" />
			<channel id="gui-show-notification" typeId="gui-show-notification" />
		</channels>

		<!-- KodiControl Params-->
		<config-description>
			<parameter name="ip" type="text" required="true">
				<label>IP</label>
				<description>The IP of the Kodi Instance</description>
				<default>http://192.168.2.103:8080</default>
			</parameter>
			
			<parameter name="displaytime" type="integer" required="true">
				<label>Message Display Time</label>
				<description>The Display time describes how long the message should be vissible in Kodi (Default 5 seconds).</description>
				<default>5000</default>
			</parameter>
			
			<parameter name="refreshtime" type="integer" required="true">
				<label>Refreshtime</label>
				<description>The refreshtime for main information (e.g. uptime) (Default 60 seconds).</description>
				<default>60</default>
			</parameter>
		</config-description>
		
	</thing-type>

	<!-- Channel Types -->
	<channel-type id="gui-show-notification">
		<item-type>String</item-type>
		<label>Notification</label>
		<description>Sends or receive a notification from/to Kodi</description>
		<state readOnly="true"/>
	</channel-type>
	
	<channel-type id="uptime">
		<item-type>String</item-type>
		<label>Uptime</label>
		<description>The uptime from Kodi</description>
		<state readOnly="true"/>
	</channel-type>
	
	<channel-type id="friendly-name">
		<item-type>String</item-type>
		<label>Friendly Name</label>
		<description>The friendly name from Kodi</description>
		<state readOnly="true"/>
	</channel-type>
</thing:thing-descriptions>
